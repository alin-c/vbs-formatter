{
  "name": "vba-formatter",
  "displayName": "VBA Formatter",
  "description": "VBA Formatter",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vbs",
    "onLanguage:vb",
    "onLanguage:vba",
    "onLanguage:VBScript"   
  ],
  "main": "./extension.js",
  "contributes": {
      "commands": [
        {
          "when": "!editorReadonly && resourceExtname =~ /\\.bas$|\\.cls$|\\.frm$/",
          "command": "extension.pretty",
          "title": "VBA-Formatter"
        }
      ],
      "keybindings": [
        {
          "command": "extension.pretty",
          "key": "ctrl+alt+b"
        }
      ],
      "menus": {
        "editor/context": [
          {
            "when": "!editorReadonly && resourceExtname =~ /\\.bas$|\\.cls$|\\.frm$/",
            "command": "extension.pretty",
            "group": "navigation"
          }
        ]
      }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
